# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home
GET		/																Welcome.index

# Registration/Authentication
GET		/signup															Application.signup
POST	/signup															Application.register
GET		/login															Application.login
POST	/login															Application.authenticate
GET		/logout															Application.logout
GET		/signup/{uuid}													Application.confirmRegistration
GET		/confirmation/{uuid}											Application.resendConfirmation

# Forums
POST	/forums															Forums.create
GET		/forums/{<[0-9]+>forumId}										Forums.show
POST	/forums/{<[0-9]+>forumId}/delete								Forums.delete

# Topics
GET		/forums/{<[0-9]+>forumId}/newTopic								Topics.post			
POST	/forums/{<[0-9]+>forumId}/topics								Topics.create
GET		/forums/{<[0-9]+>forumId}/topics/{<[0-9]+>topicId}				Topics.show		
GET		/forums/{<[0-9]+>forumId}/topics/{<[0-9]+>topicId}/reply		Topics.reply
POST 	/forums/{<[0-9]+>forumId}/topics/{<[0-9]+>topicId}				Topics.createReply	
POST 	/forums/{<[0-9]+>forumId}/topics/{<[0-9]+>topicId}/delete		Topics.delete			

# Users
GET		/users															Users.index
GET		/profile														Users.profile
GET		/users/{<[0-9]+>id}												Users.show

# /public
GET		/public/														staticDir:public

# Catch all
*		/{controller}													{controller}.index 
*		/{controller}/{action}											{controller}.{action}




# -------------------------------------------------------
# Setting for authorization app
# -------------------------------------------------------

# user operations
GET		/sysusers													    SysUsers.index
#GET	/sysusers/{<[0-9]+>page}								    SysUsers.show
POST	/sysusers/create											    SysUsers.create
POST	/sysusers/delete											    SysUsers.delete
POST	/sysusers/cleanRoles										    SysUsers.cleanRoles
POST	/sysusers/edit												SysUsers.edit
POST	/sysusers/detailForEdit										SysUsers.detailForEdit
POST	/sysusers/forbid											    SysUsers.forbid
POST	/sysusers/resume											    SysUsers.resume
GET		/sysusers/ajaxList											SysUsers.ajaxList
GET		/sysusers/newPassword										SysUsers.newPassword

# role operations
GET		/sysroles													    SysRoles.index
GET		/sysroles/ajaxList												    SysRoles.ajaxList

# function operations
GET		/functions													    Functions.index
GET		/functions/ajaxList												Functions.ajaxList

# organization operations
GET		/organization												    Organizations.index
GET		/organization/show										    Organizations.show
GET		/organization/ajaxList										    Organizations.ajaxList
GET		/organization/detailForEdit									    Organizations.detailForEdit
GET		/organization/edit										    Organizations.edit

